@model Web.Models.Aluno.CriaAlunoViewModel

@{ ViewData["Title"] = "Create"; }

<h1>Create</h1>

<h4>Aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="invalid"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="invalid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="invalid"></span>
            </div>
            <div class="form-group">
                <label for="TurmaId" class="control-label">Turma</label>
                <select name="TurmaId" class="form-control" id="TurmaId" multiple>
                    <option value="0">-</option>
                    @foreach (var turma in Model.Turmas)
                    {
                        <option value="@turma.Id">@turma.Nome</option>
                    }
                </select>
                <span validation-for="TurmaId" class="invalid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
